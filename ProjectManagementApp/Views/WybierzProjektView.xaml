<UserControl x:Class="ProjectManagementApp.Views.WybierzProjektView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjectManagementApp.Views"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Height="550" Width="500">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Lista rozwijana -->
        <Label Grid.Row="0" Margin="10">Wybierz Projekt</Label>
        <ComboBox Name="ProjectsComboBox" 
          ItemsSource="{Binding Projects}" 
          DisplayMemberPath="nazwa" 
          SelectedItem="{Binding SelectedProject}" 
          Width="200" 
          Height="30" 
          Margin="10" />


        <!-- Przycisk zatwierdź -->
        <Button Grid.Row="2"
                Content="Zatwierdź"
                Width="100"
                Height="30"
                Margin="10"
                Command="{Binding ConfirmCommand}" />
        <local:RyzykaProjektuView/>
    </Grid>
</UserControl>
