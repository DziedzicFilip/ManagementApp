<Window x:Class="ProjectManagementApp.Views.ProjektInfoWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementApp.Views"
        mc:Ignorable="d"
      Title="Szczegóły Projektu i Ryzyka" Height="400" Width="600">
    <Grid>
       
        <StackPanel Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Nazwa Projektu:" FontWeight="Bold"/>
            <TextBlock x:Name="ProjectNameText" Margin="0,0,0,10"/>
            <TextBlock Text="Opis Projektu:" FontWeight="Bold"/>
            <TextBlock x:Name="ProjectDescriptionText" Margin="0,0,0,10"/>
        </StackPanel>
        <TextBlock Text="Ryzyka" FontSize="18" FontWeight="Bold" Margin="10,150,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="RisksDataGrid" AutoGenerateColumns="True" Margin="10,200,10,10" />
    </Grid>
</Window>
