<UserControl x:Class="ProjectManagementApp.Views.PodsumowanieCzasuProjektu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagementApp.Views"
               xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"  />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Nagłówek -->
            <Label Grid.Row="0" 
          Content="Kalkulator Stawki za godzinę" 
          Margin="0,10" 
          HorizontalAlignment="Center" 
          FontSize="20" 
          FontWeight="Bold" />

            <!-- Wybór projektu -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
              Content="Wybierz Projekt"  
              VerticalAlignment="Center" 
              FontSize="14" 
              Margin="10,0" />
                <ComboBox Grid.Column="1" 
                 Margin="10,0" 
                 Width="200" 
                 ItemsSource="{Binding ProjketyItems}" 
                 DisplayMemberPath="Value" 
                 SelectedValuePath="Key" 
                 SelectedValue="{Binding Path=IdProjketu,Mode=TwoWay}" />
            </Grid>

            <!-- Wybór typu umowy -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
           Content="Wybierz Typ Umowy"  
           VerticalAlignment="Center" 
           FontSize="14" 
           Margin="10,0" />
                <ComboBox Grid.Column="1" 
              Margin="10,0" 
              Width="200" 
             
             
             SelectedValuePath="Content" 
              SelectedValue="{Binding Path=WybranyTypUmowy,Mode=TwoWay}">
                    <ComboBoxItem Content="B2B" />
                    <ComboBoxItem Content="Zlecenie" />
                    <ComboBoxItem Content="Dzieło" />
                </ComboBox>
            </Grid>

         
            <!-- Wybór waluty -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
           Content="Wybierz Walutę"  
           VerticalAlignment="Center" 
           FontSize="14" 
           Margin="10,0" />
                <ComboBox Grid.Column="1" 
          Margin="10,0" 
          Width="200" 
          SelectedValue="{Binding Path=WybranaWaluta, Mode=TwoWay}"
          SelectedValuePath="Content">
                    <ComboBoxItem Content="Euro" />
                    <ComboBoxItem Content="PLN" />
                </ComboBox>
            </Grid>




            <!-- Stawka godzinowa i przycisk obliczania -->
            <Grid Grid.Row="4" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
              Content="Stawka Godzinowa" 
              VerticalAlignment="Center" 
              FontSize="14" 
              Margin="10,0" />
                <TextBox Grid.Column="1" 
                Margin="10,0" 
                Width="150" 
                Text="{Binding Path=StawkaGodzinowa}" />
                <Button Grid.Column="2" 
               Content="Oblicz" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Command="{Binding ObliczCommand}" 
               Width="100" 
               Padding="5" />
            </Grid>

            <!-- Wyświetlanie wartości netto -->
            <Grid Grid.Row="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
           Content="Wartość Netto (PLN)" 
           VerticalAlignment="Center" 
           FontSize="14" 
           Margin="10,0" />
                <Label Grid.Column="1" 
           Content="{Binding WartoscNettoPLN}" 
           VerticalAlignment="Center" 
           FontSize="14" 
           FontWeight="Bold" 
           Foreground="DarkGreen" 
           Margin="10,0" />
                <Label Grid.Column="2" 
           Content="Netto (EUR)" 
           VerticalAlignment="Center" 
           FontSize="14" 
           Margin="10,0" />
                <Label Grid.Column="3" 
           Content="{Binding WartoscNettoEUR}" 
           VerticalAlignment="Center" 
           FontSize="14" 
           FontWeight="Bold" 
           Foreground="DarkGreen" 
           Margin="10,0" />
            </Grid>



            <!-- Wyświetlanie wartości brutto -->
            <Grid Grid.Row="9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
           Content="Wartość Brutto (PLN)" 
           VerticalAlignment="Center" 
           FontSize="14" 
           Margin="10,0" />
                <Label Grid.Column="1" 
           Content="{Binding WartoscBruttoPLN}" 
           VerticalAlignment="Center" 
           FontSize="14" 
           FontWeight="Bold" 
           Foreground="DarkGreen" 
           Margin="10,0" />
                <Label Grid.Column="2" 
           Content="Brutto (EUR)" 
           VerticalAlignment="Center" 
           FontSize="14" 
           Margin="10,0" />
                <Label Grid.Column="3" 
           Content="{Binding WartoscBruttoEUR}" 
           VerticalAlignment="Center" 
           FontSize="14" 
           FontWeight="Bold" 
           Foreground="DarkGreen" 
           Margin="10,0" />
            </Grid>

            <Grid Grid.Row="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
Content="Wartość Netto bez rabatu (PLN)" 
VerticalAlignment="Center" 
FontSize="14" 
Margin="10,0" />
                <Label Grid.Column="1" 
Content="{Binding WartoscPLNBezRabatu}" 
VerticalAlignment="Center" 
FontSize="14" 
FontWeight="Bold" 
Foreground="DarkGreen" 
Margin="10,0" />
                <Label Grid.Column="2" 
Content=" Netto bez rabatu (EUR)" 
VerticalAlignment="Center" 
FontSize="14" 
Margin="10,0" />
                <Label Grid.Column="3" 
Content="{Binding WartoscEuroBezRabatu}" 
VerticalAlignment="Center" 
FontSize="14" 
FontWeight="Bold" 
Foreground="DarkGreen" 
Margin="10,0" />
            </Grid>
            <!-- Wyświetlanie liczby godzin -->
            <Grid Grid.Row="5" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
              Content="Ilość Godzin" 
              VerticalAlignment="Center" 
              FontSize="14" 
              Margin="10,0" />
                <Label Grid.Column="1" 
              Content="{Binding CalkowityCzas}" 
              VerticalAlignment="Center" 
              FontSize="14" 
              FontWeight="Bold" 
              Foreground="DarkGreen" 
              Margin="10,0" />
            </Grid>

            <!-- Wyświetlanie dni opóźnienia -->
            <Grid Grid.Row="6" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
              Content="Dni Opóźnienia" 
              VerticalAlignment="Center" 
              FontSize="14" 
              Margin="10,0" />
                <Label Grid.Column="1" 
              Content="{Binding DniOpoznienia}" 
              VerticalAlignment="Center" 
              FontSize="14" 
              FontWeight="Bold" 
              Foreground="DarkRed" 
              Margin="10,0" />
            </Grid>
            <Grid Grid.Row="7" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
  Content="Rabat" 
  VerticalAlignment="Center" 
  FontSize="14" 
  Margin="10,0" />
                <Label Grid.Column="1" 
  Content="{Binding Rabat}" 
  VerticalAlignment="Center" 
  FontSize="14" 
  FontWeight="Bold" 
  Foreground="DarkRed" 
  Margin="10,0" />
            </Grid>
        </Grid>

        <!-- DataGrid z rejestrami czasu -->
        <DataGrid x:Name="ScheduleDataGrid" 
                    AutoGenerateColumns="False" 
                    CanUserAddRows="False" 
                    
                    IsReadOnly="True" 
                    HeadersVisibility="Column" 
                    GridLinesVisibility="All"
                    ItemsSource="{Binding RejestrCzasuDane}"
                    Grid.Row="1" Grid.Column="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Czas Spędzony" 
                                      Binding="{Binding czas_spedzony}" 
                                      Width="*" />
                <DataGridTextColumn Header="Data Rozpoczęcia" 
                                      Binding="{Binding data}" 
                                      Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Grid z opcją generowania podsumowania do pliku PDF -->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" 
                    Content="Generuj Podsumowanie do PDF" 
                    Command="{Binding GenerujPdfCommand}" 
                    Margin="10" />
            <Label Grid.Row="1" 
                   Content="Data wygenerowania dokumentu" 
                   VerticalAlignment="Center" 
                   FontSize="14" 
                   Margin="10,10" />
            <DatePicker Grid.Row="2" 
                        SelectedDate="{Binding DataWygenerowaniaDokumentu}" 
                        Margin="10,10" />
           
        </Grid>

        <!-- DataGrid do wyświetlania zadań i pole zliczające wykonane zadania -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DataGrid x:Name="TasksDataGrid" 
                     
                    AutoGenerateColumns="False" 
                    CanUserAddRows="False" 
                    
                    IsReadOnly="True" 
                    HeadersVisibility="Column" 
                    GridLinesVisibility="All"
                      ItemsSource="{Binding Zadania}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Zadanie" 
                                        Binding="{Binding nazwa}" 
                                        Width="*" />
                    <DataGridTextColumn Header="Status" 
                                        Binding="{Binding status}" 
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            
        </Grid>

        <!-- Miejsce na wykresy -->
        <Grid Grid.Row="7" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Procent wykonanych zadań" 
           HorizontalAlignment="Center" 
           FontSize="20" 
           FontWeight="Bold" 
           Margin="10" />
            <lvc:PieChart Height="150" Width="200" Grid.Row="1" Series="{Binding WykonaneZadaniaSeries}" />
           
        </Grid>
        <Grid Grid.Row="7" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" 
Content="Liczba wykonanych zadan" 
VerticalAlignment="Center" 

FontSize="14" 
FontWeight="Bold" 

Margin="10,0" />
            <Label Grid.Row="0" Grid.Column="1"
Content="{Binding LiczbaWykonanychZadan}" 
VerticalAlignment="Center" 

FontSize="14" 
FontWeight="Bold" 

Margin="10,0" />
            <Label Grid.Row="1"  Grid.Column="0" 
Content="Liczba zadan" 
VerticalAlignment="Center" 

FontSize="14" 
FontWeight="Bold" 

Margin="10,0" />
            <Label Grid.Row="1"  Grid.Column="1" 
Content="{Binding LiczbaZadan}" 
VerticalAlignment="Center" 

FontSize="14" 
FontWeight="Bold" 

Margin="10,0" />
        </Grid>
    </Grid>
</UserControl>
